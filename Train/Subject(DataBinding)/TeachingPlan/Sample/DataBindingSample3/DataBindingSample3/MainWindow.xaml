<Window x:Class="DataBindingSample3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:my ="clr-namespace:DataBindingSample3"
        Title="MainWindow" Height="350" Width="525">
    <Window.Resources>
        <my:Bill x:Key="bill"/>
    </Window.Resources>
    <StackPanel>
        <Label Content="单价"/>
        <TextBox Name="Txt_Price" Text="{Binding Source={StaticResource bill}, Path=Price}"/>
        <Label Content="数量"/>
        <TextBox Name="Txt_quantity" Text="{Binding Source={StaticResource bill}, Path=Quantity}"/>
        <Label Content="合计"/>
        <TextBlock Name="Txt_total" Text="{Binding Source={StaticResource bill}, Path=Total}"/>
    </StackPanel>
</Window>
